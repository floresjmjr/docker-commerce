<div class='account'>
  <h2>Hiii!,{{user.name}}</h2>
  <p>account info goes here</p>
  <p id='userInfo'>
    Name: {{user.name}}
    <br/>
    Email: {{user.email}}
    <br/>
    Address: {{user.address}}
  </p>
  
<p>update info is here</p>
  <div id='editInfo'>
    <form>
      <label>Update Name</label> 
      <input type='text' name='name' value='{{user.name}}'/>
      <label> Update Email</label> 
      <input type='email' name='email' value='{{user.email}}'/>
      <label>Update Address</label> 
      <input type='text' name='address' value='{{user.address}}'/>
      <label>Update Phone</label> 
      <input type='number' name='phone' value='{{user.phone}}'/>
      <button id='updateUserInfoButton'>Update</button>
    </form>
   
  </div>
  <p>order history goes here</p>
  {{#if orderHistory}}
  <h1>you have a history here</h1>
  {{#each orderHistory}}
<h3>{{this.createdAt}}</h3>
{{#each this.Products}}
<p>{{this.title}}</p>
<p>{{this.price}}</p>
<img src='{{image}}'/>
{{/each}}
{{/each}}
  {{else}}
  <h3>Looks like you don't have a history with us</h3>
  <a href='/products'>Start shopping</a>
  {{/if}}
</div>