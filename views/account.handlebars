<div class='account'>
  <h1>Hiii, {{user.name}}</h1>
  <h3>Account Information</h3>
  <p id='userInfo'>
    Name: {{user.name}}
    <br/>
    Email: {{user.email}}
    <br/>
    Address: {{user.address}}
  </p>
  
<h3>Update Account Information</h3>
  <div id='editInfo'>
    <form action='/user/account/update' method="POST">
      <div class="editInfoFormElement">
        <label>Update Name</label> 
        <input type='text' name='name' value='{{user.name}}'/>
      </div>
      <div class="editInfoFormElement">
        <label> Update Email</label> 
        <input type='email' name='email' value='{{user.email}}'/>
      </div>
      <div class="editInfoFormElement">
        <label>Update Address</label> 
        <input type='text' name='address' value='{{user.address}}'/>
      </div>
      <div class="editInfoFormElement">
        <label>Update Phone</label> 
        <input type='number' name='phone' value='{{user.phone}}'/>
      </div>
      <button type='submit' id='updateUserInfoButton'>Update</button>
    </form>
   <br/>
  </div>
  {{#if orderHistory}}
  <h1>Order History</h1>
  {{#each orderHistory}}
  <br/>
<h3>{{this.createdAt}}</h3>
{{#each this.Products}}
<section id="historyProduct">
  <img id="historyProductImage" src='{{image}}'/>
  <section id="historyProductText">
    <p id="historyProductTitle">{{this.title}}</p>
    <p id ="historyProductPrice">${{this.price}}</p>
  </section>
</section>
{{/each}}
{{/each}}
  {{else}}
  <div style="text-align: center;">
  <h3>You have not made any purchases...</h3>
  <h4>Let's change that</h4>
  <a href='/products'><button>Start Shopping</button></a>
  </div>
  {{/if}}
</div>