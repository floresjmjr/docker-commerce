    <section class="single-product-container">
        <img class="single-product-image" src={{product.image}} alt={{product.title}} />
        <div class="single-product-text-container">
            <div class="single-product-title">
                {{product.title}}
                {{#if admin}}
                <span class="single-product-admin-button"><a href="/products/{{product.id}}/update">Edit Product</a></span>
                {{/if}}
            </div>
            <div class="single-product-category">{{product.category}}</div>
            <div class="single-product-description">
              <ul>
              {{#each product.description}}
              <li>{{this}}</li>
              {{/each}}
              </ul>
            </div>
            <div class="single-product-price">${{product.price}}</div>

            {{#if user}}
                <form action='/products/{{product.id}}' method='POST' class="single-product-cart-form">
                    <button type='submit' class="single-product-cart-cta">Add to Cart</button>
                </form>
            {{else}}
                <form action='/user/login' method='GET' class="single-product-cart-form">
                    <button type='submit' class="single-product-cart-cta">Login to Add to Cart</button>
                </form>
            {{/if}}
            {{#if admin}}
                <div class="single-product-admin-button" id="single-product-delete-button">
                    <button class='single-product-delete-button' value='{{product.id}}'>Delete</button>
                </div>
            {{/if}}
        </div>
    </section>
<script src="/scripts/singleProduct.js"></script>
